{
  "manifest_version": 3,
  "name": "Tabscope",
  "version": "1.0",
  "description": "Telescope-style tab switcher",
  "permissions": ["tabs", "activeTab"],
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tabscope@gmail.com"
    }
  },
  "action": {
    "default_title": "Toggle Tabscope"
  },

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "commands": {
    "toggle-switcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Toggle Tabscope"
    }
  }
}

{
  "manifest_version": 3,
  "name": "Tabscope",
  "version": "1.0",
  "description": "Telescope-style tab switcher",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "scripts": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "commands": {
    "toggle-switcher": {
      "suggested_key": {
        "default": "Ctrl + Shift + K"
      },
      "description": "Toggle Tabscope"
    }
  }
}
